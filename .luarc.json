{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime.version": "Lua 5.4",
  "diagnostics.severity": {
    "duplicate-set-field": "Hint"
  },
  "format.enable": true,
  "format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2"
  },
  "workspace.library": [
    "$VIMRUNTIME/lua/vim",
    "${3rd}/love2d/library",
    "${3rd}/luv/library",
    "${3rd}/busted/library"
  ]
}
